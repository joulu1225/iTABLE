@model Announcement

<form asp-action="UpdateAnnouncement" method="post">
	<div id="divLocker">
		<!-- 公告標題 -->
		<div class="form-group">
			<label asp-for="Title" class="control-label"></label>
			<input asp-for="Title" class="form-control" readonly />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>

		<!-- 公告內容 -->
		<div class="form-group">
			<label asp-for="Content" class=" control-label"></label>
			<textarea asp-for="Content" class="form-control" style="min-height: 175px;" readonly></textarea>
			<span asp-validation-for="Content" class="text-danger"></span>
		</div>

		<!-- 公告日期 -->
		<div class="form-group">
			<label asp-for="AnnouncementDate" class="control-label"></label>
			<input asp-for="AnnouncementDate" class="form-control" readonly />
			<span asp-validation-for="AnnouncementDate" class="text-danger"></span>
		</div>

		<!-- 公告開始日期 -->
		<div class="form-group">
			<label asp-for="StartDate" class="control-label"></label>
			<input asp-for="StartDate" type="date" class="form-control" readonly />
			<span asp-validation-for="StartDate" class="text-danger"></span>
		</div>

		<!-- 公告結束日期 -->
		<div class="form-group">
			<label asp-for="EndDate" class="control-label"></label>
			<input asp-for="EndDate" type="date" class="form-control" readonly />
			<span asp-validation-for="EndDate" class="text-danger"></span>
		</div>
	</div>
	<!-- 隱藏的欄位，不讓用戶修改 -->
	<input type="hidden" asp-for="AnnouncementId" />
	<input type="hidden" asp-for="RestaurantId" />
	<input type="hidden" asp-for="CreatedAt" />
	<input type="hidden" asp-for="UpdatedAt" />

	@* <div class="form-group">
	<input type="submit" value="保存更改" class="btn btn-primary" />
	</div> *@
</form>